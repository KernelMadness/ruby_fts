<div class="row">
  <form action="/search" method="get" id="search-form">
    <div class="form-group">
      <%= text_field_tag :query, params[:query], class: 'form-control input-lg', autofocus: '' %>
    </div>
    <%= submit_tag 'Search', class: 'btn btn-default btn-lg center-block' %>
  </form>
</div>

<% if @articles %>
  <%= render collection: @articles, partial: 'article' %>
<% end %>

